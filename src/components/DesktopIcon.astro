---
interface Props {
    name: string;
    id: string;
    icon: string;
}

const { name, id, icon } = Astro.props;
---

<div class="desktop-icon" data-id={id}>
    <img src={`/assets/${icon}`} alt={name} width="32" height="32">
    <span class="desktop-icon-label">{name}</span>
</div>

<style>
.desktop-icon {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    width: 75px;
    padding: 4px;
    cursor: pointer;
    color: white;
    text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.8);
}



.desktop-icon img {
    image-rendering: pixelated;
    overflow-clip-margin: content-box;
    overflow: clip;
}

.desktop-icon-label {
    font-size: 11px;
    text-align: center;
    word-wrap: break-word;
    padding: 0 4px;
}
</style>

<script>
    document.querySelectorAll('.desktop-icon').forEach(icon => {
        let lastTap = 0;
        let touchTimeout: number;

        // Manejador de doble click tradicional
        icon.addEventListener('dblclick', (e) => {
            const target = e.currentTarget as HTMLElement;
            const id = target.dataset.id;
            const event = new CustomEvent('openWindow', { detail: { id } });
            document.dispatchEvent(event);
        });

        // Manejador de eventos tÃ¡ctiles
        icon.addEventListener('touchend', (e) => {
            const currentTime = new Date().getTime();
            const tapLength = currentTime - lastTap;
            const target = e.currentTarget as HTMLElement;
            
            clearTimeout(touchTimeout);

            if (tapLength < 500 && tapLength > 0) {
                // Doble tap detectado
                const id = target.dataset.id;
                const event = new CustomEvent('openWindow', { detail: { id } });
                document.dispatchEvent(event);
                e.preventDefault();
            } else {
                // Primer tap
                touchTimeout = setTimeout(() => {
                    // Manejar tap simple si es necesario
                }, 500);
            }
            lastTap = currentTime;
        });
    });
</script> 